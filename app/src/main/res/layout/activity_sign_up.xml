<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.maishealth.maishealth.usuario.gui.SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Switch
                android:id="@+id/swUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paciente"
                android:textColorLink="#fa0202"
                tools:text="MÃ©dico" />

            <EditText
                android:id="@+id/edtEmail3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:focusedByDefault="true"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edtSenha3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="@string/prompt_senha"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/edtNome3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="@string/prompt_nome"
                android:inputType="text" />

            <EditText
                android:id="@+id/edtCpf3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="@string/prompt_cpf"
                android:inputType="number" />

            <EditText
                android:id="@+id/edtNasc3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="@string/prompt_data"
                android:inputType="date" />

            <TextView
                android:id="@+id/lblSexo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="@string/lblSexo" />

            <Spinner
                android:id="@+id/spnSexo3"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/lblTipoSangue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="@string/lblTipoSangue" />

            <Spinner
                android:id="@+id/spnTipoSangue3"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:text="@string/regiao"
                tools:text="@string/regiao" />

            <Spinner
                android:id="@+id/SpnRegiao3"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/edtCRM3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/prompt_crm"
                android:inputType="number"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/edtEspec3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/prompt_especialidade"
                android:inputType="textPersonName"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorButoes"
                    android:onClick="voltarTelaLogin"
                    android:text="@string/button_cancelar"
                    android:textColor="@color/colorTextoBut"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCadastrar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorButoes"
                    android:onClick="validarCadatro"
                    android:text="@string/button_cadastrar"
                    android:textColor="@color/colorTextoBut"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
