<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="26dp">

        <TextView
            android:id="@+id/textViewNomeMedMenuHist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do mÃ©dico:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNomeMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alex Soares"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="26dp">

        <TextView
            android:id="@+id/TextViewEspecHist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Especialidade"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEspecMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Clinico geral" />

        <TextView
            android:id="@+id/textViewDataConsHist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Data: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDataConsHist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20/10/2010" />

    </LinearLayout>
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@android:drawable/divider_horizontal_bright" />


</LinearLayout>