<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maishealth.maishealth">

    <!-- To auto-complete the email text field in logarogin form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/icon_launcher_new_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_launcher_new_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">
        <activity android:name=".usuario.gui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".usuario.gui.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".usuario.gui.SignUpActivity" />
        <activity
            android:name=".usuario.gui.MenuPaciente" />
        <activity
            android:name=".usuario.gui.MeuHistoricoActivity" />
        <activity android:name=".usuario.gui.ConsultasPendentesActivity" />
        <activity android:name=".usuario.gui.AcharPostoActivity" />
        <activity
            android:name=".usuario.gui.MenuMedicoActivity" />
        <activity android:name=".usuario.gui.AtualizarPerfilPacActivity" />
        <activity android:name=".usuario.gui.AtualizarPerfilMedicoActivity" />
        <activity
            android:name=".usuario.gui.MarcacaoSintomasPacActivity" />
        <activity android:name=".usuario.gui.EscolherDia" />
        <activity android:name=".usuario.gui.ConfirmarConsulta" />
        <activity android:name=".usuario.gui.ConsultaAtualMedActivity" />
        <activity android:name=".usuario.gui.ConsultaEscolhidaActivity" />
        <activity android:name=".usuario.gui.HorarioTrabMedicoActivity" />
        <activity android:name=".usuario.gui.EscolherDiaDaConsultaActivity" />
        <activity android:name=".usuario.gui.ListaDeConsultasParaMedicoActivity" />

    </application>

</manifest>