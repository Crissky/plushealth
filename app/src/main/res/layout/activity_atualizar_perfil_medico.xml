<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maishealth.maishealth.AtualizarPerfilMedicoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">


            <TextView
                android:id="@+id/textoNomeMed"
                android:layout_width="296dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="@string/prompt_nome_tela_med"
                android:inputType="text"
                android:textSize="18sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/edtEmailMed"
                android:layout_width="297dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="@string/prompt_email_tela_med"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edtSenhaMed"
                android:layout_width="297dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="@string/prompt_senha_tela_med"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/edtCpfMed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="@string/prompt_cpf_tela_med"
                android:inputType="number"
                android:textSize="18sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/edtNascMed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="@string/prompt_data_tela_med"
                android:inputType="date"
                android:textSize="18sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/sexoMed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="@string/sexo_med"
                android:textSize="18sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/infoSexoMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textoTipoSangMed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_tipo_sangue_med"
                android:textSize="18sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textoCRM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/prompt_crm_tela_med"
                android:inputType="number"
                android:textSize="18sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textoEspecMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/prompt_especialidade_tela_med"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:visibility="invisible" />

            <LinearLayout
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelarMed"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorButoes"
                    android:onClick="retornoTelaMedico"
                    android:text="@string/button_cancelar_atual_med"
                    android:textColor="@color/colorTextoBut"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnAtualizarMedico"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorButoes"
                    android:onClick="retornoTelaMedico"
                    android:text="@string/button_atualizar_perfil_med"
                    android:textColor="@color/colorTextoBut"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>


