<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maishealth.maishealth">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_health_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_health_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".usuario.gui.LoginActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".usuario.gui.SignUpActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".usuario.gui.MenuPaciente2"
            android:screenOrientation="portrait"/>
        <activity android:name=".MarcaConsultaActivity" />
        <activity android:name=".MeuHistoricoActivity" />
        <activity android:name=".ConsultasPendentesActivity" />
        <activity android:name=".AcharPostoActivity" />
        <activity android:name=".MenuMedicoActivity"></activity>
    </application>

</manifest>