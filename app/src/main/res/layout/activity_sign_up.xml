<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.maishealth.maishealth.usuario.gui.SignUpActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPassword" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo_health" />

            <Switch
                android:id="@+id/swUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paciente"
                tools:text="Médico" />

            <AutoCompleteTextView
                android:id="@+id/edtEmail3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="@string/prompt_email" />

            <AutoCompleteTextView
                android:id="@+id/edtSenha3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="@string/prompt_senha"
                android:password="true" />

            <AutoCompleteTextView
                android:id="@+id/edtNome3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:hint="@string/prompt_nome" />

            <EditText
                android:id="@+id/edtCpf3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="@string/prompt_cpf"
                android:inputType="number" />

            <EditText
                android:id="@+id/edtNasc3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="@string/prompt_data"
                android:inputType="date" />

            <EditText
                android:id="@+id/edtCRM3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:visibility="invisible" />

            <Spinner
                android:id="@+id/spnSexo3"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:text="Região:"
                android:visibility="invisible" />

            <Spinner
                android:id="@+id/SpnRegiao3"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelar3"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:onClick="voltarTelaLogin"
                    android:text="@string/button_cancelar"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCadastrar3"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:onClick="validarCadatro"
                    android:text="@string/button_cadastrar"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
